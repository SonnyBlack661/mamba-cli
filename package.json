{
  "name": "@mamba/cli",
  "version": "3.0.0-alpha",
  "description": "Tools for creating, running, and deploying POS Mamba SDK projects",
  "author": "Stone Payments",
  "types": "build/types/types.d.ts",
  "bin": {
    "mamba": "bin/mamba"
  },
  "engines": {
    "node": ">=8.0.0"
  },
  "scripts": {
    "format": "prettier --write \"{**/*.ts,**/*.js/**/*.js}\" --loglevel error && tslint -p . --fix",
    "lint": "tslint -p .",
    "clean-build": "rm -rf ./build",
    "compile": "tsc -p .",
    "copy-templates": "if [ -e ./src/templates ]; then cp -a ./src/templates ./build/; fi",
    "build": "yarn format && yarn lint && yarn clean-build && yarn compile && yarn copy-templates",
    "prepublishOnly": "yarn build",
    "test": "jest tests/fast",
    "watch": "jest tests/fast --watch",
    "snapupdate": "jest --updateSnapshot",
    "coverage": "jest --coverage"
  },
  "files": [
    "tsconfig.json",
    "tslint.json",
    "build",
    "LICENSE",
    "readme.md",
    "docs",
    "bin"
  ],
  "keywords": [
    "sdk",
    "pos",
    "stone",
    "mamba",
    "svelte"
  ],
  "bugs": {
    "url": "https://github.com/stone-payments/mamba-cli/issues"
  },
  "homepage": "https://github.com/stone-payments/mamba-cli/tree/master/packages/cli#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/stone-payments/mamba-cli"
  },
  "license": "Apache-2.0",
  "dependencies": {
    "glob": "^7.1.6",
    "gluegun": "latest",
    "pretty-error": "^2.1.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@types/jest": "^24.0.18",
    "@types/node": "^12.7.11",
    "commitizen": "^4.1.2",
    "cz-conventional-changelog": "^3.2.0",
    "git-cz": "^4.6.2",
    "husky": "^4.2.5",
    "jest": "^24.1.0",
    "lint-staged": "^10.2.7",
    "prettier": "^2.0.5",
    "ts-jest": "^24.1.0",
    "ts-node": "^8.4.1",
    "tslint": "^5.12.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-config-standard": "^8.0.1",
    "typescript": "^3.6.3"
  },
  "config": {
    "commitizen": {
      "path": "git-cz"
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "tslint --fix",
      "git add"
    ],
    "*.md": [
      "prettier --write",
      "git add"
    ],
    "*.json": [
      "prettier --write",
      "git add"
    ]
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node"
  }
}
